package main;
import javax.swing.*;

import java.awt.*;
public class GameBoard extends JComponent{
private static final long serialVersionUID = 22020202;
private int m_rows; 
private int m_columns; 
private Color m_color1;
private Color m_color2;
private Boolean [][] m_colorarray;
public GameBoard() 
{ 
m_rows = 10;
m_columns = 10; 
m_color1 = Color.BLACK;
m_color2 = Color.WHITE;
}
public GameBoard(int rows, int columns , Color color1, Color color2)
{
	m_rows = rows;
	m_columns = columns; 
	m_color1 = color1;
	m_color2 = color2;	

}
public void paint(Graphics g)
{ 
Boolean colorblack = true;
for(int y = 0; y < m_columns;y++)
{ 
for(int x = 0; x < m_rows;x++ )
{
if(colorblack)
{
g.setColor(m_color1);
}
else 
{ 
g.setColor(m_color2);
}
colorblack = !colorblack;	
g.fillRect(50*(x),50*(y),50,50);
}
//Flips the Starting color for the next Row;
colorblack = !colorblack;
}



}

public void MouseCLicked(int X,int Y)
{ 

}
}
